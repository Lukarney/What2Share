<div class="row">
  <div class="col s3">
    <br />
    <%= form_with url: sessions_path, local: true do |f| %>
      <div class="control-group">
        <%= f.label :username %>
        <div class="controls">
          <%= f.text_field :username %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password %>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>
      
      <div class="actions"><%= f.submit "Log In" %></div>
    <% end %>
    <br/>
    <%= link_to(new_user_path, class: "waves-effect waves-light btn") do %>
      <strong>Create Account</strong>
    <% end %>
  </div>
</div>