<div class="row valign-wrapper" id="topbar">
    <div class="col s10">
        <% if current_user %>
            <%= link_to image_tag("logo.png"), current_user %>
        <% else %>
            <%= link_to image_tag("logo.png"), login_path %>
        <% end %>
    </div>
    <div class="col s2">
        <ul class='right'>
            <% unless current_user.nil? %>
                <li><%= link_to 'My Account', user_path(current_user) %></li>
                <li><%= link_to 'Logout', logout_path %></li>
                <li><%= link_to 'My Forms', edit_apps_path(current_user.id) %></li>
            <% end %>
        </ul>
    </div>
</div>